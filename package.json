{
  "name": "eslint-plugin-rtl-friendly",
  "version": "0.2.3",
  "description": "Encourage the use of RTL-friendly styles",
  "author": {
    "name": "Ahmed Abdelbaset",
    "url": "https://twitter.com/A7med3bdulBaset"
  },
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "format": "biome check . --write",
    "type:check": "tsc --noEmit",
    "lint": "eslint .",
    "format:check": "biome check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "semantic-release",
    "add-rule": "ts-node scripts/add-rule",
    "update": "ts-node scripts/update",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "eslint": ">=5.16.0",
    "tailwindcss": ">=3.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@eslint/js": "9",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.4",
    "@types/eslint": "^8.56.10",
    "@types/estree-jsx": "^1.0.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.4",
    "eslint": "^9.4.0",
    "globals": "^15.3.0",
    "jest": "^29.6.4",
    "tailwindcss": "~3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/A7med3bdulBaset/eslint-plugin-rtl-friendly.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "rtl",
    "right-to-left",
    "rtl-friendly"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/A7med3bdulBaset/eslint-plugin-rtl-friendly/issues"
  },
  "homepage": "https://github.com/A7med3bdulBaset/eslint-plugin-rtl-friendly#readme",
  "packageManager": "pnpm@9.2.0"
}
